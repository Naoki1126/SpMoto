<% if event.participated_by?(current_user) %>
	<%= link_to  event_event_participates_path(event), method: :delete , remote:true do %>
	<span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
	<%= "参加人数: #{event.event_participates.count}" %>
	<% end %>
<% else %>
	<%= link_to event_event_participates_path(event),method: :post,remote:true do %>
	<span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
	<%= "参加人数: #{event.event_participates.count}" %>
	<% end %>
<% end %>