<div class="row">
	<nav>
		<ul class= "nav nav-pills nav-justified">
			<li class="active"><%= link_to "開催予定のイベント", events_path(event_case: "now") %></li>
			<li class="active"><%= link_to "終了したイベント", events_path(event_case: "log") %></li>
			<li class="active"><%= link_to "イベント作成", new_event_path %></li>
		</ul>
	</nav>
	<div class= "col-xs-1">
	</div>
	<div class="col-xs-10">
	<table class="table table-hover table-inverse" >
		<thead>
			<tr>
				<th>目的</th>
				<th>開催日時</th>
				<th>都道府県</th>
				<th>定員</th>
				<th>現在の参加人数</th>
			</tr>
		</thead>
		<tbody>
			<% @events.each do |event| %>
				<tr>
					<td><%= event.title %></td>
					<td><%= event.date_and_time %></td>
					<td><%= link_to event.prefecture_name,events_path(prefecture_name: event.prefecture_name) %></td>
					<td><%= "#{event.capacity}人" %></td>
					<td><%= link_to "#{event.event_participates.count}人",event_event_paricipates_path(event) %></td>
					<td><%= link_to "詳細",event_path(event) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	</div>
	<div class="col-xs-1">
	</div>
</div

