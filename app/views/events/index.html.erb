<div class="row">
	<nav class= "event-top">
		<ul class= "nav nav-tabs">
			<li class="active"><%= link_to "開催予定のイベント", events_path(event_case: "now") %></li>
			<li><%= link_to "終了したイベント", events_path(event_case: "log") %></li>
			<% if user_signed_in? %>
			<li><%= link_to "イベント作成", new_event_path, data: {"turbolinks" => false} %></li>
			<% end %>
		</ul>
	</nav>
	<div class= "col-xs-1">
	</div>
	<div class="col-xs-10">
	<table class="table table-hover table-inverse" >
		<thead>
			<tr>
				<th>目的</th>
				<th>開催日時</th>
				<th>終了日時</th>
				<th>都道府県</th>
				<th>定員</th>
				<th>現在の参加人数</th>
			</tr>
		</thead>
		<tbody>
			<% @events.each do |event| %>
				<tr>
					<td><%= event.title %></td>
					<td><%= event.date_and_time.strftime("%Y年%m月%d日") %></td>
					<td><%= event.meetingfinishtime.strftime("%Y年%m月%d日") %></td>
					<td><%= link_to event.prefecture_name,events_path(event_prefecture: 'name',prefecture_code: event.prefecture_code) %></td>
					<td><%= "#{event.capacity}人" %></td>
					<td><%= link_to "#{event.event_participates.count}人",event_event_paricipates_path(event) %></td>
					<% if user_signed_in? %>
					<td><%= link_to "詳細",event_path(event), data: {"turbolinks" => false} %></td>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
	</div>
	<div class="col-xs-1">
	</div>
</div

