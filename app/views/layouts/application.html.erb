<!DOCTYPE html>
<html>
  <head>
    <title>SpMoto</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
     <script src="https://kit.fontawesome.com/cda710863c.js" crossorigin="anonymous"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
      <header class="head">
        <div class="container">
          <div class="row">
            <div class= "col-lg-2 col-md-2 col-sm-2 col-xs-2">
              <nav>
                <ul class="nav navbar-nav navbar-left">
                  <li class="title-nav-link"><%=link_to root_path do %>
                    <span class="logo">SpMoto</span><% end %>
                  </li>
                </ul>
              </nav>
            </div>
          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
          </div>
          <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
            <span class="far fa-caret-square-down"></span>
          </div>
        </div>
      </div>
      </header>
       <% if user_signed_in? %>
          <div class="head-nav">
            <div class="nav">
              <p class="nav-link"><%=link_to "マイページ", user_path(current_user),data: {"turbolinks" => false} %></p>
              <p class="nav-link"><%=link_to "投稿一覧", post_images_path,data: {"turbolinks" => false} %></p>
              <p class="nav-link"><%=link_to "会員一覧", users_path %></p>
              <p class="nav-link"><%=link_to "イベント", events_path,data: {"turbolinks" => false} %></p>
              <p class="nav-link"><%=link_to "新規投稿", new_post_image_path %></p>
              <p class="nav-link"><%=link_to "検索", search_path(search:"header") %></p>
              <p class="nav-link"><%= link_to "#",post_image_hashtag_path %></p>
              <p class="nav-link"><%=link_to "ログアウト",destroy_user_session_path,method: :delete %></p>
            </div>
          </div>

          <% else %>
           <div class="head-nav col-lg-2 col-md-2 col-sm-2 col-xs-2">
            <div class="nav">
              <p class="nav-link"><%=link_to "トップ", root_path %></p>
              <p class="nav-link"><%=link_to "投稿一覧", post_images_path,data: {"turbolinks" => false} %></p>
              <p class="nav-link"><%=link_to "イベント", events_path,data: {"turbolinks" => false} %></p>
              <p class="nav-link"><%=link_to "新規登録", new_user_registration_path %></p>
              <p class="nav-link"><%=link_to "ログイン", new_user_session_path %></p>
            </div>
          </div>
          <% end %>
      </div>
    <div class="container">



    <%= yield %>
    </div>
    <footer class="footer">
        <p class="foot">@SpMoto</p>
    </footer>
  </body>
</html>
