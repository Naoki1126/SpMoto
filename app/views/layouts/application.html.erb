<!DOCTYPE html>
<html>
  <head>
    <title>SpMoto</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
     <script src="https://kit.fontawesome.com/cda710863c.js" crossorigin="anonymous"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    <header class="head">
        <nav>
          <ul class="nav navbar-nav navbar-left">
            <li class="nav-link"><%=link_to root_path do %>
              <span class="logo">SpMoto</span><% end %>
            </li>
          </ul>
        </nav>

        <% if user_signed_in? %>
        <nav class="heade-nav">
          <ul class="nav navbar-nav navbar-right">
            <li class="nav-link"><%=link_to "マイページ", user_path(current_user) %></li>
            <li class="nav-link"><%=link_to "投稿一覧", post_images_path,data: {"turbolinks" => false} %></li>
            <li class="nav-link"><%=link_to "会員一覧", users_path %></li>
            <li class="nav-link"><%=link_to "イベント", events_path %></li>
            <li class="nav-link"><%=link_to "新規投稿", new_post_image_path %></li>
            <li class="nav-link"><%=link_to "検索", search_path(search:"header") %></li>
            <li class="nav-link"><%= link_to "#",post_image_hashtag_path %></li>
            <li class="nav-link"><%=link_to "ログアウト",destroy_user_session_path,method: :delete %></li>
          </ul>
        </nav>

        <% else %>
         <nav class="head-nav">
          <ul class="nav navbar-nav navbar-right">
            <li class="nav-link"><%=link_to "トップ", root_path %></li>
            <li class="nav-link"><%=link_to "投稿一覧", post_images_path,data: {"turbolinks" => false} %></li>
            <li class="nav-link"><%=link_to "イベント", events_path %></li>
            <li class="nav-link"><%=link_to "新規登録", new_user_registration_path %></li>
            <li class="nav-link"><%=link_to "ログイン", new_user_session_path %></li>
          </ul>
        </nav>
        <% end %>
    </header>
    <div class="container">



    <%= yield %>
  </div>
  <footer class="footer">
        <p class="foot">@SpMoto</p>
      </div>
  </footer>
  </body>
</html>
