<div class="row">
	<div class="col-xs-1 col-lg-1 col-md-1 col-sm-1">
	</div>
	<div class = "col-xs-10 col-lg-10 col-md-10 col-sm-10">
		<div class= "notification-list" data-turbolinks="false">
			<%= link_to "通知削除", notification_path(@notifications), method: :delete ,class: "fas fa-trash",id:"notification-destroy" %>
			<% if @notifications.exists? or !@notifications.nil? %>
				<td><%= render @notifications %></td>
			<% else %>
				<p>通知はありません</p>
			<% end %>
		</div>
	</div>
	<div class = "col-xs-1 col-lg-1 col-md-1 col-sm-1">
	</div>
</div>

