 <% if postimage.post_image_favorited_by?(current_user) %>
	<%= link_to post_image_post_image_favorites_path(postimage), method: :delete , remote:true do %>
	<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
	<%= "いいね数: #{postimage.post_image_favorites.count}" %>
	<% end %>
<% else %>
	<%= link_to post_image_post_image_favorites_path(postimage),method: :post,remote:true do %>
	<i class="fa fa-heart-o" aria-hidden="true"></i>
	<%= "いいね数: #{postimage.post_image_favorites.count}" %>
	<% end %>
<% end %>