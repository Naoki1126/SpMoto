<div class="row">
	<div class= "hashtag-name">
		<div class= "col-xs-2">
			<% @hashtags.each do |hash| %>
				<div class= "hashname">
					<%= link_to  "##{hash.hashname} (#{hash.post_images.count}) 件","/post_image/hashtag/#{hash.hashname}" %>
				</div>
			<% end %>
		</div>
	</div>
	<% if params[:name] == nil %>

	<% else %>
	<div class= "col-xs-10">
		<div class= "hashtag-postimage-box">
			<h3>#<%= @hashtag.hashname %>:  <%= @postimage.count %> 件 </h3>
				<% @postimage.each do |postimage| %>
		    		<%= link_to post_image_path(postimage) do %>
			  			<%= attachment_image_tag postimage.post_image_images[0], :image,size:'250x200' %>
		 			<% end %>
				<% end %>
			<div class="image-index-pagination">
				<%= paginate @postimage,class:"paginate" %>
			</div>
		</div>
	</div>
	<% end %>
</div>









