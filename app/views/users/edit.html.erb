<div class= "row">
	<%= form_for(@user) do |f| %>
	<!-- プロフィール左側 -->
	<div class= "col-xs-4">
		<div class= "user-edit-box">
			<%= attachment_image_tag @user, :profile_image, size:'150x200', format:'jpg',fallback: "no_image.jpg" %>
			<%= f.attachment_field :profile_image, class:"edit-profile-image" %>
			<table class="table table-hover table-inverse user-edit-table">
				<tr>
					<td class="edit-name">name:<span><%= f.text_field :name %></span></td>
				</tr>
				<tr>
					<td class="edit-prefecture">所属:<span><%= f.collection_select :prefecture_name, JpPrefecture::Prefecture.all,:name,:name, include_blank: true %></span></td>
				</tr>
			</table>
		</div>
	</div>
		<!-- プロフィール右側 -->
		<div class= "col-xs-8">
			<div class="user-introduction-edit">
				<%= f.text_area :introduction, :size => "55x12"%>
			</div>
			<div class= "user-edit-sub-mit">
				<%= f.submit "変更を保存する",class:"btn btn-default" %>
				<% end %>
				<%= link_to user_destroy_path(user_id: @user.id),class:"btn btn-danger",id:"edit-destroy-button" do %>
					<p>退会する</p>
				<% end %>
			</div>
		</div>
</div>