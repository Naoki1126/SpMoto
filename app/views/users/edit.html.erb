

<div class= "row">
	<%= form_for(@user) do |f| %>
	<!-- プロフィール左側 -->
	<div class= "col-xs-3">
		<div class= "user-box">
			<%= attachment_image_tag @user, :profile_image, size:'100x100', format:'jpg',fallback: "no_image.jpg" %>
			<%= f.attachment_field :profile_image %>
			<table class="table table-hover table-inverse">
				<tr>
					<td>name:<%= f.text_field :name %></td>
				</tr>
				<tr>
					<td>所属:<%= f.collection_select :prefecture_name, JpPrefecture::Prefecture.all,:name,:name, include_blank: true %></td>
				</tr>
			</table>
		</div>
	</div>
		<!-- プロフィール右側 -->
		<div class= "col-xs-9">
			<div class="user-introduction">
				<%= f.text_area :introduction %>
			</div>
				
		</div>

		<div class= "sub-mit">
		<%= f.submit "変更を保存する",class:"btn btn-primary" %>
		<% end %>
		<div class="destory">
			<%= link_to "退会する",user_destroy_path(@user),class:"btn btn-default" %>
		</div>
</div>