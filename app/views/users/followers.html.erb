<div class="row">
	<div class="col-xs-12 col-lg-12 col-md-12 col-sm-12 relation-ships">
		<h2>Follower Users</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Name</th>
					<th>Prefecture</th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
					<tr>	
						<td>
							<% if current_user.followers.where(id: user.id).exists? %>
							<p class="follow-message">あなたをフォローしています</p>
							<br>
							<% end %>
							<%= link_to user_path(user),data: {"turbolinks" => false} do %>
							<%= attachment_image_tag user, :profile_image, size:'50x50',format:'jpg',fallback: "no_image.jpg" %>
							<% end %>
							</td>
						<td>
							<% if current_user.followers.where(id: user.id).exists? %>
							<br>
							<% end %>
							<%= link_to user.name, user_path(user),data: {"turbolinks" => false} %></td>
						<td><%= user.prefecture_name %></td>
						<td width="20%"id="follow-button_<%= user.id %>">
						<%= render 'relationships/followbutton', user: user %>
						</td>
 					</tr>
 				<% end%>
 			</tbody>
		</table>
 	</div>
</div>