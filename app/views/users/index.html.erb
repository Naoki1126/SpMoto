<h3>users</h3>
<div class= "row">
	<div class="col-xs-12 col-md-12 col-lg-12 col-sm-12">
		<div class= "table-responsive">
			<table class="table table-hover table-condensed" id="user-all">
				<thead>
					<tr>
						<% if params[:prefecture_code] == nil %>
							<th>ALL Users</th>
						<% else %>
							<th><%= "'#{@prefecture.prefecture_name}'の会員" %></th>
						<% end %>
						<th>name</th>
						<th>prefecture</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<% @users.each do |user| %>
						<td><%= link_to user_path(user),data: {"turbolinks" => false} do %>
								<%= attachment_image_tag user, :profile_image, size:'50x50', format:'jpg',fallback: "no_image.jpg",class:'user-index-image' %>
						    <% end %>
						</td>
						<td><%= link_to user.name, user_path(user),data: {"turbolinks" => false} %></td>
						<% unless user.prefecture_code == nil %>
							<td width="10%"><%= link_to user.prefecture_name, users_path(prefecture_code: user.prefecture_code ) %></td>
						<% else %>
							<td width="10%"></td>
						<% end %>
						<td width="17%">
							<% if @user.followers.where(id: user.id).exists? %>
						あなたをフォローしています
						<% end %>
						</td>
						<td id="follow-button_<%= user.id %>">
							<%= render 'relationships/followbutton', user: user %>
						</td>
					</tr>
				    <% end %>
			   </tbody>
			</table>
		</div>
		<div class="image-index-pagination" data-turbolinks="false">
			<%= paginate @users,class:"paginate" %>
		</div>
	</div>
</div>
